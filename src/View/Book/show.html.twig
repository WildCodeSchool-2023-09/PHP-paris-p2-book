{% extends 'layout.html.twig' %}

{% block title %}{{ parent() ~ ' - ' ~ book.title }}{% endblock %}

{% block stylesheet %}
<link rel="stylesheet" href="/assets/css/showBook.css">
{% endblock %}

{% block content %}
  <div id="picture">
      <img src={{book.cover}} alt="picture">
  </div>
  <div class="icones">
    <img class="review" src="../assets/images/reviewBook.png" alt="review">
    <img class="share" src="../assets/images/shareBook.png" alt="share">
    <img class="add" src="../assets/images/addLibraryBook.png" alt="add">
  </div>
  <div id="bookTitle">
    <h1>
      {{ book.title }}
    </h1>
  </div>
<div class="infos">
  <div id="author">
    <p>
      {{ book.firstname }}
      {{ book. lastname }}
    </p>
  </div>
  <div id="note">
    <p> 
      note globale : {{ book.note }}/5
    </p>
  </div>
</div>
<div class="categories">
  <div id="synopsisTitle">
    <h2>Synopsis</h2>
  </div>
  <div>
    <hr class="separation" />
  </div>
  <div id="reviewTitle">
    <h2>Review</h2>
  </div>
  <div>
    <hr class="separation" />
  </div>
  <div id="detailTitle">
    <h2>Details</h2>
  </div>
</div>
<DIV id="synopsis">
  <p>
    {{ book.synopsis }}
  </p>
</DIV>
<div id="review">
  <p>Difficult√© : <strong>{{ book.difficulty }}/5</strong></p>
  <p>Temps de lecture moyen : <strong>{{ book.reading_time }}h</strong></p>
  <p>Date d'ajout : <strong>{{ book.created_at }}</strong></p>
  <p>Commentaires : <strong>{{ book.opinion }}</strong></p>
</div>
<div id="details">
  <p>ISBN : <strong>{{ book.isbn }}</strong></p>
  <p>Genre : <strong>{{ book.label }}</strong></p>
  <p>Date de publication : <strong>{{ book.written_at }}</strong></p>
  <p>Nombre de pages : <strong>{{ book.nb_pages }}</strong></p>
</div>
{% endblock %}

{% block javascript %}
  <script src="/assets/js/toggleInfosDetails.js"></script>
{% endblock %}